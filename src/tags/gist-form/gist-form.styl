.gist-form {

  input,
  button {
    display: block
    font-weight: 300
    text-align: center
    border: 0

    &:focus {
      outline: 0
    }
  }

  input {
    width: 100%
    height: 35px
    padding: 0 10px 5px
    font-size: 18px
    border-bottom: 2px solid #ebebeb

    &:focus {
      border-bottom-color: #e5e5e5
    }
  }

  button {
    width: 30%
    height: 35px
    background-color: #2ecc71
    margin: 20px auto 0
    font-size: 13px
    color: #fff
    text-transform: uppercase
    border-radius: @height
    box-shadow: 0 4px 15px 0 rgba(@background-color, .4)
    opacity: 1
    transition: opacity .3s

    &:not([disabled]) {
      cursor: pointer

      &:hover,
      &:focus {
        opacity: .9
      }
    }

    &[disabled] {
      opacity: .5
    }
  }
}
