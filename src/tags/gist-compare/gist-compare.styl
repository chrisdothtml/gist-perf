@import '../../_utils.styl'

.gist-compare {

  hr {
    display: block
    background-color: #dadada
    width: 100%
    height: 1px
    margin: 35px 0 35px
    border: 0
  }

  .compare-heading {
    display: flex

    .btn {
      min-width: 150px
    }

    @media (max-width: breakpoints.sm-max) {
      flex-direction: column

      h1 {
        font-size: 25px
      }

      .btn {
        width: 100%
        margin-top: 25px
      }
    }

    @media (min-width: breakpoints.lg-min) {
      justify-content: space-between
      align-items: center

      h1 {
        margin-right: 15px
        font-size: 30px
      }

      .btn {
        width: 200px
      }
    }
  }

  .files {
    list-style-type: none

    li {
      display: block
      margin-top: 15px

      h5 {
        margin-bottom: 10px
      }
    }
  }
}
