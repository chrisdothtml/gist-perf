.main-logo,
.github-link {
  display: block
  position: absolute
  text-decoration: none
  opacity: 1
  transition: opacity .3s

  &:hover {
    opacity: .8
  }

  > span,
  > .typcn {
    display: block
    // keep centered so we can fix parent size
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
  }
}

.main-logo {
  width: 30px
  height: 15px
  font-family: 'Marck Script', cursive
  font-size: 35px
  top: 10px
  left: 10px
}

.github-link {
  width: 35px
  height: 25px
  font-size: 50px
  bottom: 10px
  right: 10px
}
