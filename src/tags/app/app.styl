.main-logo,
.github-link {
  display: block
  position: absolute
  text-decoration: none
  opacity: 1
  transition: opacity .3s

  &:hover {
    opacity: .8
  }
}

.main-logo {
  font-family: 'Marck Script', cursive
  font-size: 35px
  top: 0
  left: 10px
}

.github-link {
  font-size: 50px
  bottom: 0
  right: 5px
  overflow: hidden
}
