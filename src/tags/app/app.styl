.main-logo,
.github-link {
  display: block
  position: absolute
  text-decoration: none
  opacity: 1
  transition: opacity .3s

  &:hover {
    opacity: .8
  }
}

.main-logo {
  font-family: 'Marck Script', cursive
  font-size: 35px
  top: 0
  left: 10px
}

.github-link {
  font-size: 50px
  bottom: 0
  right: 5px
  overflow: hidden
}

.content {
  background-color: #fff
  position: absolute
  border-radius: 3px
  box-shadow: 0 8px 22px 0 rgba(0, 0, 0, .05)

  &:not(.content__full) {
    width: 500px
    padding: 50px
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    .help-link {
      margin-top: 15px
      font-size: 12px
      color: #3498db
      text-decoration: none
      position: absolute
      top: 100%
      left: 50%
      transform: translateX(-50%)

      &:hover {
        text-decoration: underline
      }
    }
  }

  &.content__full {
    padding: 40px
    top: 40px
    bottom: @top
    left: 70px
    right: @left
    overflow: auto
  }
}
