.app-form {

  input,
  button {
    display: block
    font-weight: 300
    text-align: center
    border: 0

    &:focus {
      outline: 0
    }
  }

  input {
    width: 100%
    height: 35px
    padding: 0 10px 5px
    font-size: 18px
    border-bottom: 2px solid #ebebeb

    &:focus {
      border-bottom-color: #e5e5e5
    }
  }

  // TODO: loading state (just make something similar to ppled)

  .btn {
    width: 30%
    margin: 20px auto 0
  }
}
