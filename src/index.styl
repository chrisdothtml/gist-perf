*,
:before,
:after {
  line-height: inherit
  margin: 0
  padding: 0
  color: inherit
  box-sizing: inherit
}

html {
  height: 100%
  box-sizing: border-box
}

body {
  background-color: #fbfbfb
  min-width: 300px
  height: 100%
  line-height: 1
  font-family: 'Open Sans', sans-serif
  font-size: 16px
  color: #4b4b4b
}

.gist-form {

  input,
  button {
    display: block
    font-weight: 300
    text-align: center
    border: 0

    &:focus {
      outline: 0
    }
  }

  input {
    width: 100%
    height: 35px
    padding: 0 10px 5px
    font-size: 18px
    border-bottom: 2px solid #ebebeb

    &:focus {
      border-bottom-color: #e5e5e5
    }
  }

  button {
    width: 30%
    height: 35px
    background-color: #2ecc71
    margin: 20px auto 0
    font-size: 13px
    color: #fff
    text-transform: uppercase
    border-radius: @height
    box-shadow: 0 4px 15px 0 rgba(@background-color, .4)
    opacity: 1
    transition: opacity .3s

    &:not([disabled]) {
      cursor: pointer

      &:hover,
      &:focus {
        opacity: .9
      }
    }

    &[disabled] {
      opacity: .5
    }
  }
}

.contain {
  max-width: 1255px
  padding: 1px 55px 0
}

.card {
  background-color: #fff
  padding: 50px
  border-radius: 3px
  box-shadow: 0 8px 22px 0 rgba(0, 0, 0, .05)

  &:not(.card__float) {
    margin-top: 70px
  }

  &.card__float {
    width: 500px
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    .help-link {
      margin-top: 15px
      font-size: 12px
      color: #3498db
      text-decoration: none
      position: absolute
      top: 100%
      left: 50%
      transform: translateX(-50%)

      &:hover {
        text-decoration: underline
      }
    }
  }
}
